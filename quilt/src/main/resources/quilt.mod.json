{
    "schema_version": 1,
    "quilt_loader": {
        "group": "xyz.bluspring",
        "id": "knit-loader",
        "version": "${version}",
        "entrypoints": {},
        "plugins": [
            "xyz.bluspring.knit.loader.quilt.KnitLoaderQuilt"
        ],
        "depends": [
            {
                "id": "fabric-language-kotlin",
                "versions": ">=${fabric_kotlin_version}"
            }
        ],
        "intermediate_mappings": "net.fabricmc:intermediary",
        "metadata": {
            "name": "Knit Loader",
            "description": "A heavy abstraction of Kilt's loader code to allow for reuse in other bridge-type mods.",
            "license": "MIT",
            "contributors": {
                "BluSpring": "Maintainer"
            },
            "contact": {
                "sources": "https://github.com/KiltMC/KnitLoader",
                "issues": "https://github.com/KiltMC/KnitLoader/issues"
            },
            "icon": "assets/knit_loader/icon.png"
        }
    },
    "modmenu": {
        "badges": [ "library" ]
    }
}